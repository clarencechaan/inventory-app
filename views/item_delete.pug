extends item_detail

block item-info
  .delete-info
    if category === "gameconsole" && (games_list.length  || accessories_list.length)
      h4 Unable to delete this console. 
      h4 You must delete all games and accessories belonging to this console before deleting it.
      h4 See its games and accessories below.
      span
        a(href= item.url).cancel-btn Back
    else
      h4 Are you sure you want to delete this item?
      span
        form(method="POST", action="")
          .form-group
            input#id.form-control(
              type="hidden",
              name="id",
              required="true",
              value=item._id
            )
          button.confirm-delete-btn(type="submit") Delete
        a(href= item.url).cancel-btn Cancel

