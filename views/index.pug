extends layout

block content
  .hero 
    .hero-content
      div
        .small XBOX SERIES X &amp; PLAYSTATION 5 NOW IN STOCK
        .big The next generation of gaming is here.
        a(href="/shop/gameconsoles").shop-now-btn SHOP NOW
  .main
    .main-content
      .shop-categories
        .shop-category(style='background-image: url(/images/gameboxes.jpg);')
          .shop-btn
            a(href="/shop/games") GAMES
        .shop-category(style='background-image: url(/images/xbox.jpg);')
          .shop-btn
            a(href="/shop/gameconsoles") CONSOLES
        .shop-category(style='background-image: url(/images/accessories.jpg);')
          .shop-btn
            a(href="/shop/accessories") ACCESSORIES
      .new-arrivals
        h1 New Arrivals
        .underline
        .category-picker
          button.selected ALL
          button GAMES
          button CONSOLES
          button ACCESSORIES
        .items-window            
          .items
            each item in new_all
              a(href=item.url data-category=item.collection.collectionName).item
                .item-preview
                  .item-preview-content
                    img(src=item.img_url)
                    .item-info
                      if item.gameconsole
                        .item-console #{ item.gameconsole.name }
                      else if item.manufacturer
                        .item-console #{ item.manufacturer }
                      .item-name #{ item.name }
                      .item-price $#{ item.price }
                .item-window
                  button.add-to-cart VIEW DETAILS
            .hider
          .hider
      .deal-of-the-week
        .deal-content
          div
            h1 Deal Of The Week
              br
              .sub-text #{ deal_item.name } 
                span.price $#{ deal_item.price }
            .underline
            .timer
              .circle
                .count.day 2
                .unit Day
              .circle
                .count.hour 23
                .unit Hour
              .circle
                .count.min 48
                .unit Min
              .circle
                .count.sec 8
                .unit Sec
            a(href=deal_item.url).shop-now-btn.black SHOP NOW
      .best-sellers
        h1 Best Sellers
        .underline
        .items-window
          .items
            each item in best_sellers
              a(href=item.url data-category=item.collection.collectionName).item
                .item-preview
                  .item-preview-content
                    img(src=item.img_url)
                    .item-info
                      if item.gameconsole
                        .item-console #{ item.gameconsole.name }
                      else if item.manufacturer
                        .item-console #{ item.manufacturer }
                      .item-name #{ item.name }
                      .item-price $#{ item.price }
                .item-window
                  button.add-to-cart VIEW DETAILS

          .hider
  script(src="/scripts/index.js")